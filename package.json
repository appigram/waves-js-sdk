{
  "name": "@wavesenterprise/js-sdk",
  "version": "3.1.1",
  "description": "Waves Enterprise client-side API library",
  "keywords": [
    "cryptocurrency",
    "waves",
    "api",
    "seed",
    "transactions",
    "cryptography",
    "signature"
  ],
  "author": {
    "name": "Mikhail Tokarev",
    "email": "mtokarev@web3tech.ru",
    "url": "https://github.com/mtfj"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wavesplatform/js-sdk.git"
  },
  "main": "dist/we-sdk.min.js",
  "types": "raw/src/index.d.ts",
  "devDependencies": {
    "@types/chai": "4.1.5",
    "@types/mocha": "5.2.5",
    "browserify": "16.2.3",
    "chai": "4.1.2",
    "karma": "3.0.0",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-commonjs": "1.0.0",
    "karma-mocha": "1.3.0",
    "karma-requirejs": "1.1.0",
    "karma-typescript": "3.0.13",
    "mocha": "5.2.0",
    "mock-require": "3.0.2",
    "requirejs": "2.3.6",
    "typescript": "4.0.2",
    "uglify-es": "3.3.9",
    "ts-node": "^7.0.1"
  },
  "dependencies": {
    "@wavesenterprise/transactions-factory": "1.2.0-RC1",
    "bignumber.js": "7.2.1",
    "crypto-js": "3.1.9-1",
    "js-sha256": "^0.9.0",
    "node-fetch": "2.2.0",
    "parse-json-bignumber": "^0.1.2",
    "ts-api-validator": "2.1.3",
    "ts-utils": "6.0.4"
  },
  "scripts": {
    "_build-partial": "node_modules/.bin/browserify raw/src/index.js --node -s WeSdk -u parse-json-bignumber -u bignumber.js -u crypto -u node-fetch -u ts-utils -u @wavesenterprise/transactions-factory -u ts-api-validator > ./dist/we-sdk.partial.js",
    "_build-full": "node_modules/.bin/browserify raw/src/index.js --node -s WeSdk -u crypto -u node-fetch > ./dist/we-sdk.js",
    "build": "rm -rf ./raw && rm -rf ./dist && npm run compile && mkdir -p dist && npm run _build-partial && npm run _build-full && npm run uglifyjs && cp ./interfaces.d.ts ./raw/interfaces.d.ts",
    "compile": "mkdir -p raw && ./node_modules/.bin/tsc -p ./tsconfig.json --declaration --outDir raw",
    "uglifyjs": "node_modules/.bin/uglifyjs ./dist/we-sdk.js -o ./dist/we-sdk.min.js && node_modules/.bin/uglifyjs ./dist/we-sdk.partial.js -o ./dist/we-sdk.partial.min.js",
    "prepublishOnly": "npm run build",
    "test-browser": "npm run build && ./node_modules/.bin/tsc -p ./test/tsconfig.browser.json && ./node_modules/.bin/karma start karma.conf.js"
  }
}
